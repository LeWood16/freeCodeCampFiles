
function pairwise(arr, arg) {
  
  var usedNums = [];
  var sum = 0;
  
  //function that returns sum of indices
  function indiceSum(a, b){
    var aIndex = arr.indexOf(a);
    var bIndex = arr.indexOf(b);
    var pairSum = a + b;
    var sameIndex = (aIndex === bIndex);
    var usedBefore = usedNums.indexOf(a) > -1 || usedNums.indexOf(b) > -1;
    if (a === b){
      bIndex = arr.indexOf(b, aIndex + 1);
    }
     if (sameIndex){
      return;
    } else if (usedBefore){
      return;
    } else if (pairSum === arg){ // if sum of pairs equals arg, return sum
    var indSum = aIndex + bIndex;
    usedNums.push(a);
    usedNums.push(b);
    sum += indSum;
    return indSum; // else, return
    } else {
      return;
    }
  }
  
  //function that walks through all possible combinations of nums in arr
  for (var i = 0; i < arr.length - 1; i++){
    for (var j = 1 + i; j < arr.length; j++){
      indiceSum(arr[i], arr[j]);
    }
  }
  


return sum;


  // index "a" and index "b" are the same, because a and b are the same number; but a and b are different indexes, and indexing them only brings up the first case that the number is in the array
  
}

pairwise([1, 1, 1], 2);
